---
/**
 * Badge Component
 * Reusable badge/tag for labels
 */

interface Props {
  variant?: 'gold' | 'red' | 'gray' | 'live';
  size?: 'sm' | 'default';
}

const { variant = 'gold', size = 'default' } = Astro.props;

const variantClasses = {
  gold: 'bg-[rgba(207,181,59,0.15)] text-[#CFB53B] border-[#CFB53B]',
  red: 'bg-[rgba(168,0,30,0.15)] text-[#C4102E] border-[#A8001E]',
  gray: 'bg-gray-800 text-gray-300 border-gray-700',
  live: 'bg-[rgba(34,197,94,0.15)] text-green-400 border-green-500'
};

const sizeClasses = {
  sm: 'text-xs px-2 py-0.5',
  default: 'text-xs px-3 py-1'
};
---

<span class:list={[
  "inline-flex items-center gap-1.5 font-semibold uppercase tracking-wider border rounded",
  variantClasses[variant],
  sizeClasses[size]
]}>
  {variant === 'live' && (
    <span class="w-2 h-2 bg-green-400 rounded-full animate-pulse" />
  )}
  <slot />
</span>
