---
/**
 * SocialProofBanner Component
 * 3-stat banner for social proof above CTAs
 */

interface Props {
  variant?: 'compact' | 'full';
}

const { variant = 'compact' } = Astro.props;

const stats = [
  { value: '2,847+', label: 'downloads' },
  { value: '4.9/5', label: 'rating' },
  { value: '97%', label: 'keep it' }
];
---

{variant === 'compact' ? (
  <!-- Compact inline version -->
  <div class="flex flex-wrap items-center justify-center gap-4 md:gap-6 py-3 px-4
              bg-gradient-to-r from-gold/5 via-gold/10 to-gold/5
              border-y border-gold/20 rounded-lg mb-6">
    {stats.map((stat, i) => (
      <>
        <div class="flex items-center gap-2">
          <span class="text-gold font-bold text-lg">{stat.value}</span>
          <span class="text-gray-400 text-sm">{stat.label}</span>
        </div>
        {i < stats.length - 1 && (
          <span class="text-gray-700 hidden sm:block">|</span>
        )}
      </>
    ))}
  </div>
) : (
  <!-- Full banner version with icons -->
  <div class="bg-gradient-to-r from-gold/10 via-gold/5 to-gold/10 border border-gold/30 rounded-xl p-4 md:p-6 mb-8">
    <div class="grid grid-cols-3 gap-4 text-center">
      <div>
        <div class="flex items-center justify-center gap-1 mb-1">
          <span class="text-gold">⚡</span>
          <span class="text-white font-bold text-xl md:text-2xl">2,847+</span>
        </div>
        <p class="text-gray-400 text-xs md:text-sm">downloads this month</p>
      </div>

      <div>
        <div class="flex items-center justify-center gap-1 mb-1">
          <span class="text-gold">★</span>
          <span class="text-white font-bold text-xl md:text-2xl">4.9/5</span>
        </div>
        <p class="text-gray-400 text-xs md:text-sm">average rating</p>
      </div>

      <div>
        <div class="flex items-center justify-center gap-1 mb-1">
          <svg class="w-4 h-4 text-gold" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
          </svg>
          <span class="text-white font-bold text-xl md:text-2xl">97%</span>
        </div>
        <p class="text-gray-400 text-xs md:text-sm">keep it (no refund)</p>
      </div>
    </div>
  </div>
)}
