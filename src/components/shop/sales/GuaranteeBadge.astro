---
/**
 * GuaranteeBadge Component
 * Small guarantee badge to show below CTA buttons
 * Clickable to scroll to full guarantee section
 */

interface Props {
  days?: number;
}

const { days = 30 } = Astro.props;
---

<a
  href="#guarantee"
  class="inline-flex items-center justify-center gap-2 mt-4 py-2 px-4
         text-gray-400 hover:text-gold transition-colors
         group cursor-pointer"
>
  <svg class="w-4 h-4 text-gold" fill="currentColor" viewBox="0 0 20 20">
    <path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
  </svg>
  <span class="text-sm group-hover:underline">{days}-Day Money-Back Guarantee</span>
</a>
