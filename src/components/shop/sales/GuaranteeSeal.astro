---
/**
 * GuaranteeSeal Component
 * Money-back guarantee badge with trust copy - enhanced version
 */

interface Props {
  days?: number;
}

const { days = 30 } = Astro.props;
---

<section class="py-16 md:py-24 bg-gradient-to-b from-gray-900 to-black">
  <div class="max-w-3xl mx-auto px-4">

    <!-- Main guarantee card -->
    <div class="relative">
      <!-- Glow effect -->
      <div class="absolute -inset-2 bg-gold/10 blur-2xl rounded-3xl" />

      <div class="relative bg-gray-900 border-2 border-gold/40 rounded-2xl p-8 md:p-12">

        <div class="flex flex-col md:flex-row items-center gap-8">
          <!-- Shield icon -->
          <div class="flex-shrink-0">
            <div class="relative">
              <div class="absolute inset-0 bg-gold/30 blur-xl rounded-full" />
              <div class="relative w-28 h-28 md:w-36 md:h-36">
                <svg viewBox="0 0 100 100" class="w-full h-full text-gold">
                  <!-- Shield shape -->
                  <path
                    d="M50 5 L90 20 L90 50 Q90 80 50 95 Q10 80 10 50 L10 20 Z"
                    fill="rgba(207,181,59,0.1)"
                    stroke="currentColor"
                    stroke-width="3"
                  />
                  <!-- Checkmark -->
                  <path
                    d="M30 50 L45 65 L70 35"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="5"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  />
                </svg>
                <!-- Days badge -->
                <div class="absolute -bottom-2 -right-2 bg-gold text-black text-xs font-bold px-2 py-1 rounded-full">
                  {days} DAYS
                </div>
              </div>
            </div>
          </div>

          <!-- Content -->
          <div class="flex-1 text-center md:text-left">
            <h3 class="font-serif text-2xl md:text-3xl font-bold text-white mb-4">
              The "She's Shaking" Guarantee
            </h3>

            <div class="text-gray-300 space-y-3 text-lg">
              <p>
                Try every technique in this playbook for <span class="text-gold font-semibold">{days} full days</span>.
              </p>
              <p>
                If she's not gripping the sheets, canceling plans to see you, or asking
                <span class="text-white italic">"where did you learn that?"</span>...
              </p>
              <p class="text-white font-semibold">
                Email us. Get every penny back. No questions.
              </p>
            </div>

            <p class="text-gold mt-4 font-medium">
              We're not worried. The playbook works.
            </p>
          </div>
        </div>

        <!-- Bottom badges -->
        <div class="flex flex-wrap items-center justify-center gap-6 mt-8 pt-6 border-t border-gray-800">
          <span class="flex items-center gap-2 text-gray-400 text-sm">
            <svg class="w-5 h-5 text-gold" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
            </svg>
            Secure Payment
          </span>
          <span class="flex items-center gap-2 text-gray-400 text-sm">
            <svg class="w-5 h-5 text-gold" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
            </svg>
            Instant Access
          </span>
          <span class="flex items-center gap-2 text-gray-400 text-sm">
            <svg class="w-5 h-5 text-gold" fill="currentColor" viewBox="0 0 20 20">
              <path d="M4 4a2 2 0 00-2 2v4a2 2 0 002 2V6h10a2 2 0 00-2-2H4zm2 6a2 2 0 012-2h8a2 2 0 012 2v4a2 2 0 01-2 2H8a2 2 0 01-2-2v-4zm6 4a2 2 0 100-4 2 2 0 000 4z" />
            </svg>
            Full Refund if Not Satisfied
          </span>
        </div>

      </div>
    </div>

  </div>
</section>
