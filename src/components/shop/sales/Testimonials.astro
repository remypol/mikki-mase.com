---
/**
 * Testimonials Component
 * Social proof section with customer quotes
 */

interface Testimonial {
  quote: string;
  author: string;
  location?: string;
}

interface Props {
  testimonials: Testimonial[];
}

const { testimonials } = Astro.props;
---

<section class="py-16 md:py-24 bg-black">
  <div class="max-w-4xl mx-auto px-4">

    <h2 class="font-serif text-3xl md:text-4xl font-bold text-white text-center mb-4">
      What Men Are Saying
    </h2>
    <p class="text-gray-400 text-center mb-12">
      Real results from men who took action.
    </p>

    <div class="grid md:grid-cols-3 gap-6">
      {testimonials.map((testimonial) => (
        <div class="bg-gray-900 border border-gray-800 rounded-xl p-6 relative">
          <!-- Quote mark -->
          <div class="absolute -top-3 left-6 text-gold text-4xl font-serif">"</div>

          <p class="text-gray-300 text-lg leading-relaxed mb-4 pt-2">
            {testimonial.quote}
          </p>

          <div class="flex items-center gap-2 text-sm">
            <span class="text-gold">â€”</span>
            <span class="text-gray-400">
              {testimonial.author}{testimonial.location ? `, ${testimonial.location}` : ''}
            </span>
          </div>
        </div>
      ))}
    </div>

    <!-- Social proof stats -->
    <div class="mt-12 flex flex-wrap justify-center gap-8 md:gap-12">
      <div class="text-center">
        <p class="text-3xl md:text-4xl font-bold text-gold">2,847+</p>
        <p class="text-gray-400 text-sm">Downloads this month</p>
      </div>
      <div class="text-center">
        <p class="text-3xl md:text-4xl font-bold text-gold">4.9/5</p>
        <p class="text-gray-400 text-sm">Average rating</p>
      </div>
      <div class="text-center">
        <p class="text-3xl md:text-4xl font-bold text-gold">97%</p>
        <p class="text-gray-400 text-sm">Keep it (no refund)</p>
      </div>
    </div>

  </div>
</section>
