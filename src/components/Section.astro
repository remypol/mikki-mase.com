---
interface Props {
  variant?: 'light' | 'dark';
  class?: string;
}

const { variant = 'light', class: className } = Astro.props;

const bgClass = variant === 'dark' ? 'bg-black text-white' : 'bg-white';
const classes = `section ${bgClass} ${className || ''}`;
---

<section class={classes}>
  <div class="container">
    <slot />
  </div>
</section>
