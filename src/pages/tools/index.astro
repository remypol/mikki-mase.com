---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import Breadcrumbs from '../../components/Breadcrumbs.astro';

const toolsSchema = {
  "@type": "CollectionPage",
  "name": "Free Gambling Tools & Calculators",
  "description": "Free tools and calculators for serious gamblers. Bankroll calculators, odds charts, and strategy resources from Mikki Mase.",
  "mainEntity": {
    "@type": "ItemList",
    "itemListElement": [
      {
        "@type": "ListItem",
        "position": 1,
        "item": {
          "@type": "WebApplication",
          "name": "Baccarat Bankroll Calculator",
          "url": "https://mikki-mase.com/tools/bankroll-calculator",
          "applicationCategory": "FinanceApplication",
          "operatingSystem": "Web Browser",
          "offers": {
            "@type": "Offer",
            "price": "0",
            "priceCurrency": "USD"
          }
        }
      }
    ]
  }
};

const tools = [
  {
    title: "Blackjack Strategy Calculator",
    description: "Get the mathematically optimal play for any hand. Simple tap interface.",
    href: "/tools/blackjack-calculator",
    icon: "cards",
    status: "live",
    highlight: "Most Popular",
    features: ["Basic Strategy", "Expected Value", "Live Probability Chart"]
  },
  {
    title: "Bankroll Calculator",
    description: "Calculate session bankroll, stop-loss limits, and win goals.",
    href: "/tools/bankroll-calculator",
    icon: "calculator",
    status: "live",
    features: ["Risk Management", "Win Goals", "Session Planning"]
  },
  {
    title: "Roulette Odds Calculator",
    description: "Compare odds, payouts, and house edge for every bet type.",
    href: "/tools/roulette-calculator",
    icon: "roulette",
    status: "live",
    features: ["All Bet Types", "House Edge Analysis", "Payout Tables"]
  },
  {
    title: "Slot Bonus Calculator",
    description: "See average spins and cost to hit bonus on popular slots.",
    href: "/tools/slot-calculator",
    icon: "slot",
    status: "live",
    features: ["Bonus Frequency", "Cost Analysis", "RTP Calculator"]
  },
  {
    title: "Session Tracker",
    description: "Track your wins, losses, and patterns across sessions.",
    href: "#",
    icon: "clipboard",
    status: "coming-soon",
    features: ["Win/Loss Tracking", "Pattern Analysis", "Export Data"]
  }
];
---

<BaseLayout
  title="Free Blackjack, Roulette & Slot Calculators | Mikki Mase"
  description="Free tools and calculators for serious gamblers. Bankroll calculators, odds charts, and strategy resources."
  schema={toolsSchema}
>
  <Header />
  <Breadcrumbs items={[{ label: "Home", href: "/" }, { label: "Tools" }]} />

  <main id="main-content" class="bg-black min-h-screen">
    <!-- Hero Section with Animated Background -->
    <section class="relative py-20 md:py-32 overflow-hidden">
      <!-- Animated gradient background -->
      <div class="absolute inset-0 bg-gradient-to-br from-gold/5 via-transparent to-gold/5 animate-gradient-slow"></div>
      <div class="absolute inset-0 bg-[radial-gradient(circle_at_30%_20%,rgba(218,165,32,0.15),transparent_50%)]"></div>
      <div class="absolute inset-0 bg-[radial-gradient(circle_at_70%_80%,rgba(218,165,32,0.1),transparent_50%)]"></div>

      <div class="container mx-auto px-6 relative z-10">
        <div class="text-center max-w-4xl mx-auto">
          <div class="inline-flex items-center gap-2 bg-gold/10 border border-gold/30 rounded-full px-4 py-2 mb-6 fade-in-up">
            <svg class="w-4 h-4 text-gold" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
            </svg>
            <span class="text-gold text-sm font-semibold uppercase tracking-wide">Free Professional Tools</span>
          </div>

          <h1 class="text-white text-5xl md:text-7xl font-black mb-6 tracking-tight fade-in-up" style="animation-delay: 0.1s;">
            Gambling Tools &<br/>Calculators
          </h1>

          <p class="text-gray-300 text-xl md:text-2xl mb-8 fade-in-up leading-relaxed" style="animation-delay: 0.2s;">
            Professional-grade tools used by serious players.<br class="hidden md:block"/>
            <span class="text-gold">No sign-up. No fees. No bullshit.</span>
          </p>

          <!-- Stats Row -->
          <div class="grid grid-cols-3 gap-4 md:gap-8 max-w-2xl mx-auto mt-12 fade-in-up" style="animation-delay: 0.3s;">
            <div class="bg-gradient-to-br from-white/5 to-white/[0.02] backdrop-blur-xl border border-white/10 rounded-xl p-4 md:p-6">
              <p class="text-gold text-2xl md:text-4xl font-black mb-1">5</p>
              <p class="text-gray-400 text-xs md:text-sm uppercase tracking-wide">Free Tools</p>
            </div>
            <div class="bg-gradient-to-br from-white/5 to-white/[0.02] backdrop-blur-xl border border-white/10 rounded-xl p-4 md:p-6">
              <p class="text-gold text-2xl md:text-4xl font-black mb-1">100%</p>
              <p class="text-gray-400 text-xs md:text-sm uppercase tracking-wide">Free Forever</p>
            </div>
            <div class="bg-gradient-to-br from-white/5 to-white/[0.02] backdrop-blur-xl border border-white/10 rounded-xl p-4 md:p-6">
              <p class="text-gold text-2xl md:text-4xl font-black mb-1">0</p>
              <p class="text-gray-400 text-xs md:text-sm uppercase tracking-wide">Ads or Signup</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Tools Grid -->
    <section class="py-16 md:py-24">
      <div class="container mx-auto px-6">
        <div class="max-w-6xl mx-auto">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6 md:gap-8">
            {tools.map((tool, index) => (
              <a
                href={tool.status === 'live' ? tool.href : undefined}
                class={`tool-card group relative block bg-gradient-to-br from-white/5 to-white/[0.02] backdrop-blur-xl border border-white/10 rounded-2xl p-8 transition-all duration-500 ${
                  tool.status === 'live'
                    ? 'hover:border-gold/50 hover:shadow-2xl hover:shadow-gold/20 hover:scale-[1.02] cursor-pointer hover:-translate-y-1'
                    : 'opacity-50 cursor-not-allowed'
                }`}
                style={`animation: fade-in-up 0.6s ease-out ${index * 0.1}s both;`}
              >
                {/* Highlight Badge */}
                {tool.highlight && (
                  <div class="absolute -top-3 -right-3 bg-gradient-to-r from-gold to-yellow-500 text-black text-xs font-bold px-3 py-1.5 rounded-full shadow-lg">
                    ⭐ {tool.highlight}
                  </div>
                )}

                <div class="flex items-start justify-between mb-6">
                  <div class="w-16 h-16 rounded-xl bg-gradient-to-br from-gold/20 to-gold/5 border border-gold/30 flex items-center justify-center group-hover:scale-110 group-hover:rotate-3 transition-transform duration-300">
                    {tool.icon === 'cards' && (
                      <svg class="w-8 h-8 text-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
                      </svg>
                    )}
                    {tool.icon === 'calculator' && (
                      <svg class="w-8 h-8 text-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
                      </svg>
                    )}
                    {tool.icon === 'roulette' && (
                      <svg class="w-8 h-8 text-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <circle cx="12" cy="12" r="10" stroke-width="2" />
                        <circle cx="12" cy="12" r="4" stroke-width="2" />
                        <path stroke-linecap="round" stroke-width="2" d="M12 2v4M12 18v4M2 12h4M18 12h4" />
                      </svg>
                    )}
                    {tool.icon === 'slot' && (
                      <svg class="w-8 h-8 text-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <rect x="3" y="4" width="18" height="16" rx="2" stroke-width="2" />
                        <path stroke-linecap="round" stroke-width="2" d="M7 8v8M12 8v8M17 8v8" />
                        <circle cx="7" cy="12" r="2" stroke-width="1.5" />
                        <circle cx="12" cy="12" r="2" stroke-width="1.5" />
                        <circle cx="17" cy="12" r="2" stroke-width="1.5" />
                      </svg>
                    )}
                    {tool.icon === 'clipboard' && (
                      <svg class="w-8 h-8 text-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" />
                      </svg>
                    )}
                  </div>
                  {tool.status === 'coming-soon' && (
                    <span class="text-xs bg-gray-800 text-gray-400 px-3 py-1.5 rounded-full font-semibold border border-gray-700">Coming Soon</span>
                  )}
                </div>

                <h3 class="text-white text-2xl font-bold mb-3 group-hover:text-gold transition-colors">{tool.title}</h3>
                <p class="text-gray-400 text-base mb-6 leading-relaxed">{tool.description}</p>

                {/* Features List */}
                {tool.features && (
                  <div class="space-y-2 mb-6">
                    {tool.features.map((feature: string) => (
                      <div class="flex items-center gap-2 text-sm text-gray-500">
                        <svg class="w-4 h-4 text-gold flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                        </svg>
                        <span>{feature}</span>
                      </div>
                    ))}
                  </div>
                )}

                {tool.status === 'live' && (
                  <div class="flex items-center gap-2 text-gold font-bold group-hover:gap-3 transition-all">
                    <span>Try it free</span>
                    <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                    </svg>
                  </div>
                )}
              </a>
            ))}
          </div>

          <!-- Why These Tools Section -->
          <div class="mt-20 md:mt-32 bg-gradient-to-br from-white/5 to-white/[0.02] backdrop-blur-xl border border-white/10 rounded-3xl p-8 md:p-12">
            <div class="max-w-3xl mx-auto text-center">
              <h2 class="text-white text-3xl md:text-4xl font-bold mb-6">Why These Tools?</h2>
              <p class="text-gray-300 text-lg leading-relaxed mb-8">
                I've spent <span class="text-gold font-bold">$10+ million</span> learning what works and what doesn't. These tools are the result of that education—built to give you the edge I wish I had starting out.
              </p>
              <div class="grid md:grid-cols-3 gap-6 text-left">
                <div class="bg-black/30 rounded-xl p-6 border border-white/5">
                  <div class="w-12 h-12 rounded-lg bg-gold/10 border border-gold/30 flex items-center justify-center mb-4">
                    <svg class="w-6 h-6 text-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                  </div>
                  <h3 class="text-white font-bold mb-2">Mathematically Accurate</h3>
                  <p class="text-gray-400 text-sm">Built on proven probability theory and real-world casino rules.</p>
                </div>
                <div class="bg-black/30 rounded-xl p-6 border border-white/5">
                  <div class="w-12 h-12 rounded-lg bg-gold/10 border border-gold/30 flex items-center justify-center mb-4">
                    <svg class="w-6 h-6 text-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                  </div>
                  <h3 class="text-white font-bold mb-2">Built for Speed</h3>
                  <p class="text-gray-400 text-sm">Fast calculations, clean interface. Get answers in seconds.</p>
                </div>
                <div class="bg-black/30 rounded-xl p-6 border border-white/5">
                  <div class="w-12 h-12 rounded-lg bg-gold/10 border border-gold/30 flex items-center justify-center mb-4">
                    <svg class="w-6 h-6 text-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                    </svg>
                  </div>
                  <h3 class="text-white font-bold mb-2">No Data Collection</h3>
                  <p class="text-gray-400 text-sm">Your sessions stay private. No tracking, no accounts required.</p>
                </div>
              </div>
            </div>
          </div>

          <!-- CTA Section -->
          <div class="mt-16 md:mt-20 text-center bg-gradient-to-br from-gold/10 to-gold/5 border border-gold/20 rounded-3xl p-10 md:p-16">
            <h2 class="text-white text-3xl md:text-4xl font-bold mb-4">Want More Tools?</h2>
            <p class="text-gray-300 text-lg mb-8 max-w-2xl mx-auto">
              Join the community to vote on what we build next. Members get early access to new calculators and exclusive gambling content.
            </p>
            <a
              href="/join"
              class="inline-flex items-center gap-3 bg-gold hover:bg-gold/90 text-black font-bold py-4 px-10 rounded-xl transition-all hover:scale-105 hover:shadow-xl hover:shadow-gold/30"
            >
              <span>Join the Community</span>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>

<style>
  @keyframes fade-in-up {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes gradient-slow {
    0%, 100% {
      opacity: 0.5;
    }
    50% {
      opacity: 1;
    }
  }

  .fade-in-up {
    animation: fade-in-up 0.8s ease-out both;
  }

  .animate-gradient-slow {
    animation: gradient-slow 8s ease-in-out infinite;
  }

  .tool-card {
    position: relative;
    overflow: hidden;
  }

  .tool-card::before {
    content: '';
    position: absolute;
    inset: 0;
    background: radial-gradient(circle at var(--mouse-x, 50%) var(--mouse-y, 50%), rgba(218, 165, 32, 0.1), transparent 50%);
    opacity: 0;
    transition: opacity 0.3s;
    pointer-events: none;
  }

  .tool-card:hover::before {
    opacity: 1;
  }
</style>

<script>
  // Add mouse tracking for card glow effect
  document.addEventListener('DOMContentLoaded', () => {
    const cards = document.querySelectorAll('.tool-card');

    cards.forEach(card => {
      card.addEventListener('mousemove', (e) => {
        const rect = (card as HTMLElement).getBoundingClientRect();
        const x = ((e.clientX - rect.left) / rect.width) * 100;
        const y = ((e.clientY - rect.top) / rect.height) * 100;
        (card as HTMLElement).style.setProperty('--mouse-x', `${x}%`);
        (card as HTMLElement).style.setProperty('--mouse-y', `${y}%`);
      });
    });
  });
</script>
