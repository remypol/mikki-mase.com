      "datePublished": "2025-01-21",
      "dateModified": "2026-01-02",
      "articleSection": "Casino Gaming",
      "keywords": "Mikki Mase banned, casino advantage player, backed off casinos, why casinos ban players, Griffin Book, casino ban map"
    },
    {
      "@type": "BreadcrumbList",
      "@id": "https://mikki-mase.com/banned#breadcrumb",
      "itemListElement": [
        {
          "@type": "ListItem",
          "position": 1,
          "name": "Home",
          "item": "https://mikki-mase.com/"
        },
        {
          "@type": "ListItem",
          "position": 2,
          "name": "Banned From Casinos",
          "item": "https://mikki-mase.com/banned"
        }
      ]
    }
  ]
