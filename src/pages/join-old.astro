---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Hero from '../components/Hero.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';

const joinSchema = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "WebPage",
      "@id": "https://mikki-mase.com/join#page",
      "url": "https://mikki-mase.com/join",
      "name": "Join the Mikki Mase Telegram Community - Free Access",
      "description": "Get free access to Mikki Mase's Telegram community. Free guides, cheatsheets, pattern recognition tools, and direct access to behind-the-scenes stories.",
      "isPartOf": {
        "@id": "https://mikki-mase.com/#website"
      },
      "about": {
        "@id": "https://mikki-mase.com/#person"
      },
      "inLanguage": "en-US"
    },
    {
      "@type": "BreadcrumbList",
      "itemListElement": [
        {
          "@type": "ListItem",
          "position": 1,
          "name": "Home",
          "item": "https://mikki-mase.com"
        },
        {
          "@type": "ListItem",
          "position": 2,
          "name": "Join",
          "item": "https://mikki-mase.com/join"
        }
      ]
    }
  ]
};
---

<BaseLayout
  title="Join the Mikki Mase Telegram Community - Free Access"
  description="Get free access to Mikki Mase's Telegram community. Free guides, cheatsheets, pattern recognition tools, and direct access to behind-the-scenes stories."
  schema={joinSchema}
>
  <Header />
  <Breadcrumbs items={[{ label: "Home", href: "/" }, { label: "Join" }]} />

  <!-- HERO SECTION -->
  <Hero
    eyebrow="Free Community Access"
    title="Join the Community"
    subtitle="Exclusive guides, cheatsheets, and behind-the-scenes access to the strategies that won $32M."
    backgroundImage="/images/mikki-main-1.webp"
    variant="medium"
  />

  <!-- MAIN CONTENT -->
  <section class="bg-black py-20 md:py-32 relative overflow-hidden">
    <!-- Subtle background pattern -->
    <div class="absolute inset-0 opacity-5">
      <div class="absolute inset-0" style="background-image: radial-gradient(circle at 2px 2px, #CFB53B 1px, transparent 0); background-size: 40px 40px;"></div>
    </div>

    <div class="container mx-auto px-6 relative z-10">
      <div class="max-w-4xl mx-auto">

        <!-- Intro -->
        <div class="text-center mb-16 md:mb-20">
          <h2 class="text-white text-3xl md:text-4xl font-bold mb-6">
            What You Get Inside
          </h2>
          <p class="text-gray-300 text-lg md:text-xl leading-relaxed">
            The Telegram community is where Mikki shares everything he's learned from winning $32M+ and getting banned from 150+ casinos. No paywalls, no upsells—just real insights. New here? Read <a href="/story" class="text-gold hover:text-gold-light underline">The Story</a> or check the <a href="/faq" class="text-gold hover:text-gold-light underline">FAQ</a> first.
          </p>
        </div>

        <!-- Benefits -->
        <div class="space-y-8 mb-16 md:mb-20">
          <!-- Benefit 1 -->
          <div class="bg-gray-900 border-l-4 border-gold p-8 md:p-10">
            <div class="flex items-start gap-6">
              <div class="flex-shrink-0">
                <div class="w-12 h-12 rounded-full bg-gold/10 border-2 border-gold flex items-center justify-center">
                  <svg class="w-6 h-6 text-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                  </svg>
                </div>
              </div>
              <div>
                <h3 class="text-white text-xl md:text-2xl font-bold mb-3">Free Strategy Guides</h3>
                <p class="text-gray-400 text-lg leading-relaxed">
                  Step-by-step breakdowns of baccarat strategy, bankroll management, and pattern recognition techniques. No fluff—just the systems that work.
                </p>
              </div>
            </div>
          </div>

          <!-- Benefit 2 -->
          <div class="bg-gray-900 border-l-4 border-gold p-8 md:p-10">
            <div class="flex items-start gap-6">
              <div class="flex-shrink-0">
                <div class="w-12 h-12 rounded-full bg-gold/10 border-2 border-gold flex items-center justify-center">
                  <svg class="w-6 h-6 text-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                  </svg>
                </div>
              </div>
              <div>
                <h3 class="text-white text-xl md:text-2xl font-bold mb-3">Exclusive Cheatsheets</h3>
                <p class="text-gray-400 text-lg leading-relaxed">
                  Pattern recognition tools, betting progression charts, and reference materials you can use at the table. Downloadable and actionable.
                </p>
              </div>
            </div>
          </div>

          <!-- Benefit 3 -->
          <div class="bg-gray-900 border-l-4 border-gold p-8 md:p-10">
            <div class="flex items-start gap-6">
              <div class="flex-shrink-0">
                <div class="w-12 h-12 rounded-full bg-gold/10 border-2 border-gold flex items-center justify-center">
                  <svg class="w-6 h-6 text-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                  </svg>
                </div>
              </div>
              <div>
                <h3 class="text-white text-xl md:text-2xl font-bold mb-3">Direct Access to Mikki</h3>
                <p class="text-gray-400 text-lg leading-relaxed">
                  Real-time updates, behind-the-scenes stories from high-stakes tables, and direct Q&A with Mikki. Ask questions, share experiences, learn from the legend himself.
                </p>
              </div>
            </div>
          </div>

          <!-- Benefit 4 -->
          <div class="bg-gray-900 border-l-4 border-gold p-8 md:p-10">
            <div class="flex items-start gap-6">
              <div class="flex-shrink-0">
                <div class="w-12 h-12 rounded-full bg-gold/10 border-2 border-gold flex items-center justify-center">
                  <svg class="w-6 h-6 text-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                  </svg>
                </div>
              </div>
              <div>
                <h3 class="text-white text-xl md:text-2xl font-bold mb-3">Private Community</h3>
                <p class="text-gray-400 text-lg leading-relaxed">
                  Connect with other serious players who think differently about the game. Share strategies, discuss patterns, and learn from each other's experiences.
                </p>
              </div>
            </div>
          </div>
        </div>

        <!-- CTA Block -->
        <div class="bg-gradient-to-br from-gray-900 to-black border-2 border-gold/30 rounded-2xl p-10 md:p-16 text-center">
          <div class="mb-8">
            <p class="text-gold text-sm md:text-base uppercase tracking-widest mb-4">100% Free Access</p>
            <h2 class="text-white text-3xl md:text-5xl font-black mb-6">Ready to Join?</h2>
            <p class="text-gray-300 text-lg md:text-xl leading-relaxed max-w-2xl mx-auto mb-8">
              Click below to join the Telegram community. You'll get instant access to all guides, cheatsheets, and the full archive of Mikki's insights.
            </p>
          </div>

          <!-- Primary CTA Button -->
          <a
            href="https://bit.ly/mikkilandingspage"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-3 px-10 py-5 bg-red-bright text-white text-xl font-bold rounded-xl hover:scale-105 hover:shadow-2xl transition-all duration-200"
          >
            <svg class="w-7 h-7" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm4.64 6.8c-.15 1.58-.8 5.42-1.13 7.19-.14.75-.42 1-.68 1.03-.58.05-1.02-.38-1.58-.75-.88-.58-1.38-.94-2.23-1.5-.99-.65-.35-1.01.22-1.59.15-.15 2.71-2.48 2.76-2.69.01-.03.01-.14-.07-.2-.08-.06-.19-.04-.27-.02-.12.03-1.99 1.27-5.61 3.72-.53.36-1.01.54-1.44.53-.47-.01-1.38-.27-2.06-.49-.83-.27-1.49-.42-1.43-.88.03-.24.37-.49.99-.74 3.89-1.69 6.48-2.81 7.77-3.35 3.7-1.54 4.47-1.81 4.97-1.82.11 0 .36.03.52.16.14.11.17.26.19.37.01.08.03.29.01.45z"/>
            </svg>
            Join Telegram Community
          </a>

          <p class="text-gray-500 text-sm mt-6">
            No credit card required. No hidden costs. Just free access.
          </p>
        </div>

        <!-- Social Proof -->
        <div class="mt-16 pt-16 border-t border-gray-800 text-center">
          <h3 class="text-white text-xl font-bold mb-8">Follow Mikki on Social Media</h3>
          <div class="flex flex-wrap justify-center gap-6">
            <a
              href="https://www.youtube.com/@Mikki_Mase"
              target="_blank"
              rel="noopener noreferrer"
              class="flex items-center gap-3 px-6 py-3 bg-gray-900 hover:bg-gray-800 text-white rounded-lg transition-colors"
            >
              <svg class="w-6 h-6 text-red-500" fill="currentColor" viewBox="0 0 24 24">
                <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
              </svg>
              <span class="font-semibold">YouTube</span>
            </a>

            <a
              href="https://www.instagram.com/mikki_mase_community"
              target="_blank"
              rel="noopener noreferrer"
              class="flex items-center gap-3 px-6 py-3 bg-gray-900 hover:bg-gray-800 text-white rounded-lg transition-colors"
            >
              <svg class="w-6 h-6 text-pink-500" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
              </svg>
              <span class="font-semibold">Instagram</span>
            </a>

            <a
              href="https://www.facebook.com/mikkimasecommunity"
              target="_blank"
              rel="noopener noreferrer"
              class="flex items-center gap-3 px-6 py-3 bg-gray-900 hover:bg-gray-800 text-white rounded-lg transition-colors"
            >
              <svg class="w-6 h-6 text-blue-500" fill="currentColor" viewBox="0 0 24 24">
                <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
              </svg>
              <span class="font-semibold">Facebook</span>
            </a>
          </div>
        </div>

      </div>
    </div>
  </section>

  <Footer />
</BaseLayout>

<style>
  .bg-red-bright {
    background-color: #A8001E;
  }
  .bg-red-bright:hover {
    background-color: #8B0015;
  }
</style>
