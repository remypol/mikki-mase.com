                  />
                </div>

                <!-- Info & Timestamps -->
                <div class="md:w-1/2 p-6 md:p-8">
                  <div class="flex items-center gap-2 mb-2">
                    <span class="bg-gold/20 text-gold text-xs font-bold px-2 py-1 rounded">MASTERCLASS</span>
                    <span class="text-gray-500 text-sm">{content.duration}</span>
                  </div>
                  <h3 class="text-white text-xl font-bold mb-3">{content.title}</h3>
                  <p class="text-gray-400 text-sm mb-4">{content.description}</p>

                  {content.timestamps.length > 0 && (
                    <div class="border-t border-gray-800 pt-4">
                      <h4 class="text-white text-sm font-bold mb-3">Timestamps:</h4>
                      <div class="space-y-1 max-h-48 overflow-y-auto">
                        {content.timestamps.map((ts) => (
                          <a
                            href={`https://www.youtube.com/watch?v=${content.videoId}&t=${ts.time.replace(':', 'm')}s`}
