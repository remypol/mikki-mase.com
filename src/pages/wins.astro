            borderWidth: 2
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          plugins: {
            legend: {
              position: 'bottom',
              labels: {
                color: 'rgba(255, 255, 255, 0.9)',
                padding: 15,
                font: { size: 12, weight: 'bold' }
              }
            },
            tooltip: {
              backgroundColor: 'rgba(0, 0, 0, 0.9)',
              padding: 12,
              titleFont: { size: 14, weight: 'bold' },
              bodyFont: { size: 13 },
              callbacks: {
                label: (context) => {
                  const label = context.label || '';
                  const value = context.parsed || 0;
                  return `${label}: $${value}M`;
                }
              }
            }
          }
        }
      });
    }

    // Timeline Chart (Bar)
    const timelineCtx = document.getElementById('timeline-chart') as HTMLCanvasElement;
    if (timelineCtx) {
      timelineChart = new Chart(timelineCtx, {
        type: 'bar',
        data: {
          labels: ['Venetian\n2021-22', 'Wynn\n2021-22', 'Biggest Loss\nOne Night', 'Hustler Live\n2022-23', 'Biggest Win\n7 Days', 'Peak Period\nYear 3'],
          datasets: [{
            label: 'Amount ($M)',
            data: [10, -1.5, -8, -0.939, 11.526, 52], // Year 3: $1M/week √ó 52 weeks
            backgroundColor: [
              'rgba(34, 197, 94, 0.8)',   // Venetian - green
              'rgba(239, 68, 68, 0.8)',   // Wynn - red
              'rgba(239, 68, 68, 0.8)',   // Biggest loss - red
              'rgba(239, 68, 68, 0.8)',   // Hustler - red
              'rgba(234, 179, 8, 0.8)',   // Biggest win - yellow (unverified)
              'rgba(234, 179, 8, 0.8)'    // Peak period - yellow (unverified)
            ],
            borderColor: [
              'rgba(34, 197, 94, 1)',
              'rgba(239, 68, 68, 1)',
              'rgba(239, 68, 68, 1)',
              'rgba(239, 68, 68, 1)',
              'rgba(234, 179, 8, 1)',
              'rgba(234, 179, 8, 1)'
            ],
            borderWidth: 2,
            borderRadius: 6
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          plugins: {
            legend: {
              display: false
            },
            tooltip: {
              backgroundColor: 'rgba(0, 0, 0, 0.9)',
              padding: 12,
              titleFont: { size: 14, weight: 'bold' },
              bodyFont: { size: 13 },
              callbacks: {
                label: (context) => {
                  const value = context.parsed.y;
                  if (value < 0) {
                    return `Loss: -$${Math.abs(value).toFixed(2)}M`;
                  } else {
                    return `Win: +$${value.toFixed(2)}M`;
                  }
                }
              }
            }
          },
          scales: {
            y: {
              grid: {
                color: 'rgba(255, 255, 255, 0.1)'
              },
              ticks: {
                color: 'rgba(255, 255, 255, 0.7)',
                callback: (value) => {
                  const num = value as number;
                  return num >= 0 ? `+$${num}M` : `-$${Math.abs(num)}M`;
                }
              }
            },
            x: {
              grid: {
                display: false
              },
              ticks: {
                color: 'rgba(255, 255, 255, 0.9)',
                font: { size: 10, weight: 'bold' }
              }
            }
          }
        }
      });
    }
  }

  // Filter functionality
  const filterBtns = document.querySelectorAll('.filter-btn');
  const filterSections = document.querySelectorAll('.filter-section');

  filterBtns.forEach(btn => {
    btn.addEventListener('click', () => {
      const filter = (btn as HTMLElement).dataset.filter;

      // Update active state
      filterBtns.forEach(b => b.classList.remove('active'));
      btn.classList.add('active');

      // Show/hide sections
      if (filter === 'all') {
        filterSections.forEach(section => section.classList.remove('hidden-filter'));
      } else {
        filterSections.forEach(section => {
          const category = (section as HTMLElement).dataset.category;
          if (category === filter) {
            section.classList.remove('hidden-filter');
          } else {
            section.classList.add('hidden-filter');
          }
        });
      }

      // Scroll to first visible section
      const firstVisible = document.querySelector('.filter-section:not(.hidden-filter)');
      if (firstVisible && filter !== 'all') {
        firstVisible.scrollIntoView({ behavior: 'smooth', block: 'start' });
      }
    });
  });

  // Initialize charts when page loads
  if (typeof window !== 'undefined') {
    window.addEventListener('DOMContentLoaded', initCharts);
  }
</script>
