        {
          "@type": "ListItem",
          "position": 1,
          "name": "Home",
          "item": "https://mikki-mase.com"
        },
        {
          "@type": "ListItem",
          "position": 2,
          "name": "Wins",
          "item": "https://mikki-mase.com/wins"
