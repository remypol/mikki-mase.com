---
/**
 * Secure Download Page
 * Verifies JWT token and redirects to download file
 */

// This page must be server-rendered (dynamic tokens)
export const prerender = false;

import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { verifyDownloadToken, getDownloadPath } from '../../lib/downloads';
import { getProductById } from '../../config/shop/products';

const { token } = Astro.params;

let product = null;
let downloadPath = null;
let error = null;

if (token) {
  const result = verifyDownloadToken(token);

  if (result.valid && result.productId) {
    product = getProductById(result.productId);
    downloadPath = getDownloadPath(result.productId);

    if (!product || !downloadPath) {
      error = 'Product not found';
    }
  } else {
    error = result.error || 'Invalid download link';
  }
} else {
  error = 'No download token provided';
}

// If valid, redirect to the file
if (downloadPath && !error) {
  return Astro.redirect(downloadPath);
}
---

<BaseLayout
  title={product ? `Download ${product.name}` : 'Download Error'}
  description="Download your purchase"
>
  <Header />

  <section class="min-h-screen flex items-center justify-center py-20 px-4">
    <div class="max-w-md w-full text-center">

      {error === 'Token expired' ? (
        <!-- Expired Token State -->
        <>
          <div class="w-16 h-16 mx-auto mb-6 bg-yellow-500/20 rounded-full flex items-center justify-center">
            <svg class="w-8 h-8 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h1 class="text-2xl font-bold text-white mb-4">Download Link Expired</h1>
          <p class="text-gray-400 mb-8">
            Your download link has expired after 7 days. Check your email for a new link,
            or contact support if you need assistance.
          </p>
          <a
            href="mailto:support@mikki-mase.com"
            class="inline-block bg-mikki-red text-white font-semibold px-6 py-3 rounded-lg hover:bg-red-700 transition-colors"
          >
            Contact Support
          </a>
        </>

      ) : error ? (
        <!-- Error State -->
        <>
          <div class="w-16 h-16 mx-auto mb-6 bg-red-500/20 rounded-full flex items-center justify-center">
            <svg class="w-8 h-8 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
            </svg>
          </div>
          <h1 class="text-2xl font-bold text-white mb-4">{error}</h1>
          <p class="text-gray-400 mb-8">
            Your download link may be invalid. Check your email for the correct link,
            or contact support if you need assistance.
          </p>
          <a
            href="mailto:support@mikki-mase.com"
            class="inline-block bg-mikki-red text-white font-semibold px-6 py-3 rounded-lg hover:bg-red-700 transition-colors"
          >
            Contact Support
          </a>
        </>

      ) : (
        <!-- Loading/redirect state (shouldn't reach here normally) -->
        <>
          <div class="w-12 h-12 border-4 border-gold border-t-transparent rounded-full mx-auto mb-6 animate-spin" />
          <p class="text-white">Starting download...</p>
        </>
      )}

    </div>
  </section>

  <Footer />
</BaseLayout>
