---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Button from '../components/Button.astro';
---

<BaseLayout
  title="Page Not Found - Mikki Mase"
  description="The page you're looking for doesn't exist. Explore Mikki Mase's story, wins, and baccarat system."
>
  <Header />

  <main class="bg-black min-h-[70vh] flex items-center justify-center">
    <div class="container px-6 py-20 text-center">
      <!-- 404 Number -->
      <div class="mb-8">
        <span class="text-gold text-[120px] md:text-[180px] font-black leading-none">404</span>
      </div>

      <!-- Message -->
      <h1 class="text-white text-3xl md:text-5xl font-bold mb-4">
        Page Not Found
      </h1>
      <p class="text-gray-400 text-lg md:text-xl max-w-2xl mx-auto mb-12">
        Looks like this page got banned too. The page you're looking for doesn't exist or has been moved.
      </p>

      <!-- Popular Pages -->
      <div class="mb-12">
        <p class="text-gray-500 text-sm uppercase tracking-wider mb-6">Popular Pages</p>
        <div class="flex flex-wrap justify-center gap-4">
          <Button variant="secondary" href="/story">Read the Story</Button>
          <Button variant="secondary" href="/wins">See the Wins</Button>
          <Button variant="secondary" href="/the-system">Learn the System</Button>
          <Button variant="secondary" href="/faq">FAQ</Button>
        </div>
      </div>

      <!-- Back to Home -->
      <Button variant="primary" href="/">
        Back to Homepage
      </Button>
    </div>
  </main>

  <Footer />
</BaseLayout>
