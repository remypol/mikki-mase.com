---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';
import AnimatedStat from '../components/AnimatedStat.astro';

const joinSchema = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "WebPage",
      "@id": "https://mikki-mase.com/join#page",
      "url": "https://mikki-mase.com/join",
      "name": "Join the Mikki Mase Telegram Community - Free Access",
      "description": "Get free access to Mikki Mase's Telegram community. Free guides, cheatsheets, pattern recognition tools, and direct access to behind-the-scenes stories.",
      "isPartOf": {
        "@id": "https://mikki-mase.com/#website"
      },
      "about": {
        "@id": "https://mikki-mase.com/#person"
      },
      "inLanguage": "en-US"
    },
    {
      "@type": "BreadcrumbList",
      "itemListElement": [
        {
          "@type": "ListItem",
          "position": 1,
          "name": "Home",
          "item": "https://mikki-mase.com"
        },
        {
          "@type": "ListItem",
          "position": 2,
          "name": "Join",
          "item": "https://mikki-mase.com/join"
        }
      ]
    }
  ]
