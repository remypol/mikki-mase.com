---
/**
 * AuthorBox - E-E-A-T signal component for SEO
 * Shows author credentials to establish expertise and trustworthiness
 */
interface Props {
  variant?: 'full' | 'compact';
  showSocials?: boolean;
}

const { variant = 'full', showSocials = true } = Astro.props;
---

{variant === 'full' ? (
  <aside class="bg-gray-900 border border-gray-800 rounded-2xl p-6 md:p-8" itemscope itemtype="https://schema.org/Person">
    <div class="flex flex-col md:flex-row gap-6 items-start">
      <!-- Author Avatar -->
      <div class="flex-shrink-0">
        <img
          src="/images/mikki-main-1.webp"
          alt="Mikki Mase - Professional Gambler"
          class="w-20 h-20 md:w-24 md:h-24 rounded-full object-cover border-2 border-gold"
          itemprop="image"
          loading="lazy"
        />
      </div>

      <!-- Author Info -->
      <div class="flex-1">
        <div class="flex items-center gap-2 mb-2">
          <h3 class="text-white text-xl font-bold" itemprop="name">Mikki Mase</h3>
          <svg class="w-5 h-5 text-blue-500" fill="currentColor" viewBox="0 0 20 20" title="Verified">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
          </svg>
        </div>

        <p class="text-gold text-sm font-semibold mb-3" itemprop="jobTitle">Professional Gambler & Casino Expert</p>

        <p class="text-gray-400 text-sm leading-relaxed mb-4" itemprop="description">
          Mikki Mase (born Michael David Meiterman) has won over <strong class="text-white">$32 million</strong> from casinos
          and been <strong class="text-white">banned from 150+ properties worldwide</strong>. His strategies and insights are
          based on real experience at the highest stakes. <a href="/story" class="text-gold hover:text-gold-light">Read his full story â†’</a>
        </p>

        <!-- Credentials -->
        <div class="flex flex-wrap gap-3 mb-4">
          <span class="inline-flex items-center gap-1 bg-gray-800 text-gray-300 text-xs px-3 py-1 rounded-full">
            <svg class="w-3 h-3 text-gold" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
            </svg>
            $32M+ Documented Wins
          </span>
          <span class="inline-flex items-center gap-1 bg-gray-800 text-gray-300 text-xs px-3 py-1 rounded-full">
            <svg class="w-3 h-3 text-red-500" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M13.477 14.89A6 6 0 015.11 6.524l8.367 8.368zm1.414-1.414L6.524 5.11a6 6 0 018.367 8.367zM18 10a8 8 0 11-16 0 8 8 0 0116 0z" clip-rule="evenodd" />
            </svg>
            150+ Casino Bans
          </span>
          <span class="inline-flex items-center gap-1 bg-gray-800 text-gray-300 text-xs px-3 py-1 rounded-full">
            <svg class="w-3 h-3 text-blue-400" fill="currentColor" viewBox="0 0 20 20">
              <path d="M10 12a2 2 0 100-4 2 2 0 000 4z" />
              <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd" />
            </svg>
            20M+ Interview Views
          </span>
        </div>

        <!-- Social Links -->
        {showSocials && (
          <div class="flex items-center gap-4">
            <a
              href="https://www.youtube.com/@Mikki_Mase"
              target="_blank"
              rel="noopener noreferrer"
              class="text-gray-400 hover:text-red-500 transition-colors"
              itemprop="sameAs"
              aria-label="YouTube"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
              </svg>
            </a>
            <a
              href="https://www.instagram.com/mikki_mase_community"
              target="_blank"
              rel="noopener noreferrer"
              class="text-gray-400 hover:text-pink-500 transition-colors"
              itemprop="sameAs"
              aria-label="Instagram"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
              </svg>
            </a>
            <a
              href="https://bit.ly/mikkilandingspage"
              target="_blank"
              rel="noopener noreferrer"
              class="text-gray-400 hover:text-blue-400 transition-colors"
              aria-label="Telegram"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm4.64 6.8c-.15 1.58-.8 5.42-1.13 7.19-.14.75-.42 1-.68 1.03-.58.05-1.02-.38-1.58-.75-.88-.58-1.38-.94-2.23-1.5-.99-.65-.35-1.01.22-1.59.15-.15 2.71-2.48 2.76-2.69.01-.03.01-.14-.07-.2-.08-.06-.19-.04-.27-.02-.12.03-1.99 1.27-5.61 3.72-.53.36-1.01.54-1.44.53-.47-.01-1.38-.27-2.06-.49-.83-.27-1.49-.42-1.43-.88.03-.24.37-.49.99-.74 3.89-1.69 6.48-2.81 7.77-3.35 3.7-1.54 4.47-1.81 4.97-1.82.11 0 .36.03.52.16.14.11.17.26.19.37.01.08.03.29.01.45z"/>
              </svg>
            </a>
          </div>
        )}
      </div>
    </div>
  </aside>
) : (
  <!-- Compact Version for inline use -->
  <div class="flex items-center gap-3 py-4" itemscope itemtype="https://schema.org/Person">
    <img
      src="/images/mikki-main-1.webp"
      alt="Mikki Mase"
      class="w-10 h-10 rounded-full object-cover border border-gold"
      itemprop="image"
      loading="lazy"
    />
    <div>
      <a href="/story" class="text-white font-semibold hover:text-gold transition-colors" itemprop="name">Mikki Mase</a>
      <p class="text-gray-400 text-sm" itemprop="jobTitle">Professional Gambler</p>
    </div>
  </div>
)}
